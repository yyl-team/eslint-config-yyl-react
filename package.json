{
  "name": "eslint-config-yyl-react",
  "version": "2.0.0",
  "description": "eslint config for yyl-react",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint --config ./.eslintrc.json --ext=jsx,ts,tsx ./test/base/src",
    "prettier": "prettier --write ./test/base/src/**/*",
    "test": "npm run eslint && npm run prettier && npm run eslint",
    "prepublishOnly": "npm test"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackness1208/eslint-config-yyl-react.git"
  },
  "keywords": [
    "eslint-config",
    "yyl-react"
  ],
  "author": "jackness",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jackness1208/eslint-config-yyl-react/issues"
  },
  "homepage": "https://github.com/jackness1208/eslint-config-yyl-react#readme",
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "prettier": ">=2.0.0",
    "typescript": ">=4.1.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "eslint": "^8.7.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "typescript": "^4.5.5"
  }
}
